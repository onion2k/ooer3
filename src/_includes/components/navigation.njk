<nav class="sticky top-0 flex items-center justify-between flex-wrap px-8 py-5 nav-gradient">
  <a href="/" class="font-semibold text-xl tracking-tight">Ooer by Chris Neale</a>

  {% set navPages = collections.all | eleventyNavigation %}
  <ul>
    {% for entry in navPages %}
      <li class="inline">
        <a
         href="{{ entry.url }}"
         class="uppercase text-sm py-1 px-2 rounded mr-4 inline-block
         {{'bg-black text-white' if entry.url in page.url
         else 'text-gray-700 hover:text-gray-900'}}">
         {{ entry.title }}
       </a>
      </li>
    {% endfor %}
 </ul>
</nav>
